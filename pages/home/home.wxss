/*总菜单容器*/
.menu {
  display: block;
  height: 38px;
  position: relative;
  width: 100%;
}

/*一级菜单*/
.menu dt {
 font-size: 12px;
 float: left;
 /*hack*/
 width: 33.3%;
 height: 38px;
 text-align: center;
 background-color: #FFF;
 color: #5a5a5a;
 line-height: 38px;
 z-index:99;
}

/*二级菜单外部容器样式*/
.menu dd{
 position: absolute;
 width: 100%;
 bottom: 0;
 left:0;
 z-index:8;
}

.menu dt i {
  position: relative;
  top: 25%;
  right: -5%;
  width: 0px;
  height: 0px;
  border: 5px solid #4e4e4e;
  border-top-color: #4e4e4e;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
 }

/*二级菜单普通样式*/
.menu li{
  font-size: 12px;
	line-height: 34px;
	color: #575757;
	height: 34px;
	display: block;
	padding-left: 8px;
	background-color: #fff;
  border-bottom: 1px solid #dbdbdb;
  z-index:8;
  opacity: 1;
}

/*二级菜单高亮样式*/
.menu li.highlight{
 background-color: #f4f4f4;
 color: #48C23D;
}

