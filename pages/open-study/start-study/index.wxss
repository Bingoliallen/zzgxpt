@import "../../../colorui/animation.wxss";

.content-view-de{
    float:left;
    width:100%;
    margin-top:0px;
    overflow-y: auto;
    overflow-x: hidden;
  }
  
.news .item .riqi {
    float: right;
    margin-right: 10rpx;
    color: #666;
  }
  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
  } 
  .newsListDe {
    width: 720rpx;
    padding-top:10px;
    padding-bottom:10rpx;
    padding-left:20px;
    padding-right:20px;
    background-color: #FFF;
    border-bottom: 1px solid #f0f0f0;
    display: flex;
    flex-direction: column;
  }
  .title {
    width: 100%;
    font-size: 13px;
  }
  .title-sel {
    width: 100%;
    font-size: 13px;
    color:#0081ff;
  }
  .descriptDiv {
    margin-top:10rpx;
    display: flex;
    flex-direction: row;
  }
  .descriptde {
    padding-left:2px;
    color:#666;
  }
  .wordde {
    line-height: 25px;
  }
  .cover {
    width: 25%;
  }
  
  .cover-img {
    width: 100%;
    border-radius: 10px;
  }
  .imgde{
    margin-top:15rpx;
  }

  video{
    display: block;
  }
  .container-video{
    height: 0;
    padding-bottom: 56.25%;
    position: relative;
    width:100%;
  }
  /*video*/
  .vp-v{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: block;
  }


  .takephoto1{
    width: 100%;
  }
  
  .takephoto1 .camera{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .takephoto1 camera {
    width: 120px;
    height: 140px;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: -99;
  }
  
  .takephoto .goBack {
    color: #1792f0;
    margin-left: 35rpx;
    font-size: 35rpx;
  }
  
  .distinguishing image{
    height: 370rpx;
    width: 100%;
  }
  
  .progress_bg {
    position: absolute;
    width: 220px;
    height: 220px;
  }
  
  .progress_canvas {
    width: 220px;
    height: 220px;
  }
  
  .takephoto1 .complete {
    border-top: 1rpx solid #e5e5e5;
    width: 100%;
    position: fixed;
    bottom: 0;
    background: #fff;
    color: #1792f0;
    font-size: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
  }
